{
	"$schema": "https://turborepo.org/schema.json",
	"globalEnv": [
		"DATABASE_URL",
		"WEB_BASE_URL",
		"AUTH_BASE_URL",
		"AUTH_BASE_PATH",
		"POSTS_OPENAPI_URL",
		"AUTH_SECRET",
		"TRUSTED_ORIGINS",
		"CROSS_DOMAIN",
		"GOOGLE_CLIENT_ID",
		"GOOGLE_CLIENT_SECRET",
		"RESEND_API_KEY",
		"FROM_EMAIL"
	],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "build/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {}
	}
}
