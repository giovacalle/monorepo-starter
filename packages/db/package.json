{
	"name": "@monorepo-starter/db",
	"private": true,
	"version": "1.0.0",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			}
		}
	},
	"scripts": {
		"studio": "drizzle-kit studio",
		"generate": "drizzle-kit generate",
		"migrate": "drizzle-kit migrate",
		"push": "drizzle-kit push",
		"db:init": "drizzle-kit generate && drizzle-kit push && tsx ./.init/reset.ts && tsx ./.init/seed.ts",
		"build": "tsup src/index.ts --format esm,cjs --dts"
	},
	"devDependencies": {
		"@monorepo-starter/config-ts": "workspace:*",
		"@types/node": "^22.14.0",
		"@types/pg": "^8.11.11",
		"dotenv": "^16.4.7",
		"drizzle-kit": "^0.30.6",
		"tsup": "^8.5.0",
		"tsx": "^4.7.1",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"drizzle-orm": "^0.41.0",
		"drizzle-seed": "^0.3.1",
		"pg": "^8.14.1"
	}
}
