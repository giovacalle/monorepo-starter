{
	"extends": "@monorepo-starter/config-ts/base",
	"include": ["src/emails/**/*.tsx", "src/**/*.ts"],
	"compilerOptions": {
		"outDir": "dist",
		"jsx": "react-jsx",
		"paths": {
			"@/src/*": ["./src/*"],
			"@/emails/*": ["./src/emails/*"],
			"@/shared/*": ["./src/shared/*"]
		}
	}
}
