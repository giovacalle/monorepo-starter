{
	"extends": "@monorepo-starter/config-ts/base",
	"include": ["emails/**/*.tsx", "src/**/*.ts"],
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"jsx": "react-jsx",
		"paths": {
			"@/emails/*": ["./emails/*"],
			"@/shared/*": ["./shared/*"],
			"@/src/*": ["./src/*"]
		}
	},
	"tsc-alias": {
		"resolveFullPaths": true
	}
}
