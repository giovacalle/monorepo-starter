{
	"name": "@monorepo-starter/web",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "paraglide-js compile --project ./project.inlang && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"pocketbase:copy-db-data": "docker compose cp pocketbase:/pb/pb_data/data.db ../../packages/backend/pb_data/data.db",
		"pocketbase:generate-schema": "pnpm pocketbase:copy-db-data && pocketbase-typegen --out ./src/lib/pocketbase/pb-schema.d.ts --db ../../packages/backend/pb_data/data.db"
	},
	"devDependencies": {
		"@iconify/svelte": "^5.0.0",
		"@monorepo-starter/config-eslint": "workspace:*",
		"@monorepo-starter/config-prettier": "workspace:*",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"clsx": "^2.1.1",
		"pocketbase-typegen": "^1.3.1",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"sveltekit-superforms": "^2.27.1",
		"tailwind-merge": "^3.3.0",
		"tailwindcss": "^4.0.0",
		"tw-animate-css": "^1.2.9",
		"typescript": "^5.0.0",
		"valibot": "^1.1.0",
		"vite": "^6.2.6"
	},
	"dependencies": {
		"@inlang/paraglide-js": "^2.0.0",
		"bits-ui": "^1.4.7",
		"mode-watcher": "^1.1.0",
		"pocketbase": "^0.26.1",
		"svelte-sonner": "^1.0.5"
	},
	"packageManager": "pnpm@10.6.5"
}
